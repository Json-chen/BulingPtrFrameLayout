<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/iv_left_hand"
        android:layout_width="145dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="-120dp"
        android:src="@drawable/header_left_hand" />


    <ImageView
        android:id="@+id/iv_right_hand"
        android:layout_width="106dp"
        android:layout_height="86dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-160dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/header_right_hand"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/ly_buling_coin"
        android:layout_width="64dp"
        android:layout_height="45dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-62dp">

        <ImageView
            android:id="@+id/iv_coin"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/header_coin_normal" />

        <ImageView
            android:id="@+id/bg_buling"
            android:layout_width="64dp"
            android:layout_height="38dp"
            android:src="@drawable/header_buling"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/bg_halo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/header_halo"
            android:layout_marginTop="3dp"
            android:visibility="gone" />
    </FrameLayout>


    <ImageView
        android:id="@+id/iv_left_finger"
        android:layout_width="19dp"
        android:layout_height="14dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/header_left_finger" />


    <ImageView
        android:id="@+id/iv_right_finger"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-108dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/header_right_finger"
        android:visibility="visible" />


    <FrameLayout
        android:id="@+id/ly_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/iv_slogan"
            android:layout_width="99dp"
            android:layout_height="12dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/header_pagoda_slogan" />

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="99dp"
            android:layout_height="12dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/header_release_refresh" />
    </FrameLayout>
</RelativeLayout>